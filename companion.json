{
  "receipts": [
    "projects/common",
    "coding-standards/doctrine/12"
  ],
  "config": {
    "phpConstraint": "^8.2",
    "directories": [
      "spec"
    ]
  },
  "tools": {
    "phpcq": {
      "plugins": {
        "phpunit": false,
        "phpcs": true
      },
      "defaults": {
        "repositories": [
          "vendor/netzmacht/phpspec-phpcq-plugin/repository.json"
        ]
      },
      "presets": {
        "phpcpd": {
          "tasks": {
            "phpcpd": {
              "config": {
                "exclude": [
                  "spec/Definition/Vector/MultiPolylineSpec.php",
                  "spec/Definition/Vector/PolylineSpec.php",
                  "src/Schema/GeoData/UriDataSchema.php",
                  "src/Schema/GeoData/ExternalDataSchema.php"
                ]
              }
            }
          }
        },
        "phpcs": {
          "tasks": {
            "phpcs": {
              "chains": {
                "verify": true
              }
            }
          }
        }
      }
    }
  }
}
