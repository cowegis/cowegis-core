{
  "name": "cowegis/cowegis-core",
  "description": "Cowegis Core - Content Web GIS Core",
  "license": "LGPL-3.0-or-later",
  "type": "contao-bundle",
  "keywords": [
    "gis",
    "leaflet",
    "osm",
    "open street map",
    "webgis"
  ],
  "authors": [
    {
      "name": "David Molineus",
      "email": "david.molineus@netzmacht.de"
    }
  ],
  "require": {
    "php": "^8.2",
    "ext-json": "*",
    "ext-pdo": "*",
    "beberlei/assert": "^3.2",
    "cowegis/cowegis-geojson": "^1.0@dev",
    "goldspecdigital/oooas": "^2.8",
    "psr/container": "^1.0",
    "psr/event-dispatcher": "^1.0",
    "psr/http-message": "^1.0"
  },
  "require-dev": {
    "doctrine/coding-standard": "^12.0",
    "friends-of-phpspec/phpspec-expect": "^4.0",
    "netzmacht/phpspec-phpcq-plugin": "@dev",
    "phpcq/runner-bootstrap": "@dev",
    "phpspec/phpspec": "^7.4"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://token:ANU5iWbJuovTQ5j4Mre31crK5Dx36OscQ33uB7tzHtcDvTO55bAkRl8M8P0Mvp9r@packages.netzmacht.de/r/"
    }
  ],
  "autoload": {
    "psr-4": {
      "Cowegis\\Core\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "spec\\Cowegis\\Core\\": "spec/"
    }
  },
  "config": {
    "allow-plugins": {
      "contao-components/installer": true,
      "contao/manager-plugin": true,
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "php-http/discovery": true
    },
    "sort-packages": true
  },
  "extra": {
    "branch-alias": {
      "dev-master": "1.0.x-dev"
    },
    "contao-manager-plugin": "Cowegis\\Core\\ContaoManager\\Plugin"
  }
}
